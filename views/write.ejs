<%- include('header.ejs') %>

<main class="mw">
  <h2>THE BLOG</h2>
  <h3>Blog Writing</h3>
  <form action="/write" method="post" class="writecon" enctype="multipart/form-data">
    <label for="title">title</label>
    <input type="text" name="title" id="title" placeholder="title" required>
    <label for="postimg">img</label>
    <input type="file" name="postimg" id="postimg">
    <label for="content">content</label>
    <textarea name="content" id="contnet" placeholder="content"></textarea>
    <label for="createAtDate" hidden>date</label>
    <input type="date" id="createAtDate" name="createAtDate">
    <button type="submit">write</button>
  </form>
</main>

<script>
  const createAtDate = document.querySelecto('#createAtDate')
  const today = new Date().toISOString().slice(0,10);//오늘날짜를 지역적으로 바꿔서 시간까지 나옴, 그걸 자른다
  createAtDate.value = today //인풋에 들어감
</script>


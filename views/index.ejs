<%- include('header.ejs') %>

<main class="mw">
  <h2>THE BLOG</h2>
  <h3>All blog posts </h3>
  <ul class="lists">
    <% if(posts.length ==0){%>
        <li> no posts</li>
    <% } else { %>
        <% posts.map(post => { %> 
          <li class="card">
            <p hidden><%= post._id %></p>
            <div class="imgArea">
              <% if(post.postImgPath == null){ %>
                <img src="/images.png" alt="noimg">
              <% } else { %>
              <img src="<%= post.postImgPath %>" alt="<%= post.title %>">
              <% } %>
            </div>
            <div class="info">
              <p>
                <span class="user"><%= post.username %></span> / 
                <span class="createDate"><%= post.createAtDate %></span>
              </p>
              <h4 class="title"><%= post.title %></h4>
              <p class="desc"><%= post.content %></p>
            </div>
              <a class="more" href="/detail/<%= post._id %>">details</a>
          </li>
        <% }).join('') %> 
    <% } %> 
</ul>
</main>

<%- include('footer.ejs') %>